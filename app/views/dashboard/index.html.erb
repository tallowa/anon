<div class="min-h-screen bg-gray-50">
  <%= render 'shared/nav' %>
  <!-- Subscription Banner -->
<% if current_user.company.subscription_tier == 'free' %>
  <div class="bg-indigo-50 border-l-4 border-indigo-400 p-4 mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-indigo-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
      </div>
      <div class="ml-3 flex-1">
        <p class="text-sm text-indigo-700">
          You're on the <strong>Free plan</strong>. Upgrade to unlock unlimited feedback requests, sentiment analysis, and more!
          <%= link_to "View Plans", pricing_path, class: "font-medium underline" %>
        </p>
      </div>
    </div>
  </div>
<% elsif current_user.company.on_trial? %>
  <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6">
    <div class="flex">
      <div class="ml-3">
        <p class="text-sm text-blue-700">
          ðŸŽ‰ Your <strong><%= current_user.company.tier_name %></strong> trial ends <%= time_ago_in_words(current_user.company.trial_ends_at) %> from now.
          <%= link_to "Manage Billing", billing_portal_path, method: :post, class: "font-medium underline" %>
        </p>
      </div>
    </div>
  </div>
<% end %>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <div class="mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Dashboard</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-1">
                  <dt class="text-sm font-medium text-gray-500 truncate">
                    Total Feedback Received
                  </dt>
                  <dd class="mt-1 text-3xl font-semibold text-gray-900">
                    <%= @total_responses %>
                  </dd>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-1">
                  <dt class="text-sm font-medium text-gray-500 truncate">
                    Active Requests
                  </dt>
                  <dd class="mt-1 text-3xl font-semibold text-gray-900">
                    <%= @recent_requests.count %>
                  </dd>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
              <%= link_to feedback_requests_path, method: :post, class: "block" do %>
                <dt class="text-sm font-medium text-indigo-600 truncate">
                  Create New Request
                </dt>
                <dd class="mt-1 text-lg font-semibold text-indigo-600">
                  + New Feedback Link
                </dd>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <% if @recent_requests.any? %>
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
          <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
              Recent Feedback Requests
            </h3>
          </div>
          <ul class="divide-y divide-gray-200">
            <% @recent_requests.each do |request| %>
              <li>
                <%= link_to feedback_request_path(request), class: "block hover:bg-gray-50" do %>
                  <div class="px-4 py-4 sm:px-6">
                    <div class="flex items-center justify-between">
                      <div class="flex-1">
                        <p class="text-sm font-medium text-indigo-600 truncate">
                          <%= request.shareable_url %>
                        </p>
                        <p class="mt-2 flex items-center text-sm text-gray-500">
                          <span class="truncate">
                            <%= request.response_count %> responses â€¢ 
                            Created <%= time_ago_in_words(request.created_at) %> ago â€¢
                            Expires <%= time_ago_in_words(request.expires_at) %> from now
                          </span>
                        </p>
                      </div>
                    </div>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'shared/mobile_menu_script' %>
