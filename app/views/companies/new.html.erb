<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Create Your Company Account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Or
        <%= link_to "sign in to existing account", login_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </p>
    </div>
    
    <%= form_with model: @company, url: signup_path, class: "mt-8 space-y-6" do |f| %>
      <% if @error %>
        <div class="rounded-md bg-red-50 p-4">
          <p class="text-sm text-red-800"><%= @error %></p>
        </div>
      <% end %>
      
      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <%= f.label :name, "Company Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name,
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: "Acme Corp",
              required: true,
              autofocus: true %>
        </div>
        
        <div>
          <%= f.label :domain, "Company Email Domain", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :domain,
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: "acme.com",
              required: true %>
          <p class="mt-1 text-sm text-gray-500">Only users with this email domain can join</p>
        </div>
        
        <div class="pt-4 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-700 mb-3">Admin Account</h3>
          
          <div class="space-y-4">
            <div>
              <%= label_tag :admin_email, "Your Email", class: "block text-sm font-medium text-gray-700" %>
              <%= email_field_tag :admin_email, nil,
                  class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                  placeholder: "you@acme.com",
                  required: true %>
            </div>
            
            <div>
              <%= label_tag :admin_password, "Password", class: "block text-sm font-medium text-gray-700" %>
              <%= password_field_tag :admin_password, nil,
                  class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                  required: true %>
              <p class="mt-1 text-sm text-gray-500">Minimum 8 characters</p>
            </div>
            
            <div>
              <%= label_tag :admin_password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
              <%= password_field_tag :admin_password_confirmation, nil,
                  class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                  required: true %>
            </div>
          </div>
        </div>
      </div>

      <div>
        <%= f.submit "Create Company", 
            class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
