<div class="bg-white">
  <!-- Navigation -->
  <nav class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <%= link_to root_path do %>
            <h1 class="text-2xl font-bold text-indigo-600">Anonymous Feedback</h1>
          <% end %>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "Pricing", pricing_path, class: "text-indigo-600 font-medium" %>
          <%= link_to "About", about_path, class: "text-gray-700 hover:text-gray-900" %>
          <% if logged_in? %>
            <%= link_to "Dashboard", dashboard_path, class: "text-gray-700 hover:text-gray-900" %>
            <%= button_to "Logout", logout_path, method: :delete, class: "text-gray-700 hover:text-gray-900" %>
          <% else %>
            <%= link_to "Log In", login_path, class: "text-gray-700 hover:text-gray-900" %>
            <%= link_to "Get Started", signup_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Pricing Header -->
  <div class="bg-gradient-to-br from-indigo-500 to-purple-600 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl font-extrabold text-white sm:text-5xl">
        Simple, transparent pricing
      </h1>
      <p class="mt-4 text-xl text-indigo-100">
        Choose the plan that's right for you. Start free, upgrade anytime.
      </p>
    </div>
  </div>

  <!-- Pricing Cards -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-8 pb-12">
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-4">
      
      <!-- Free Tier -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="px-6 py-8">
          <h3 class="text-2xl font-bold text-gray-900">Individual</h3>
          <p class="mt-4 text-gray-500">Perfect for trying out the platform</p>
          <p class="mt-8">
            <span class="text-4xl font-extrabold text-gray-900">$0</span>
            <span class="text-base font-medium text-gray-500">/month</span>
          </p>
          <%= link_to "Start Free", signup_path, class: "mt-8 block w-full bg-gray-200 text-gray-900 rounded-md py-2 text-sm font-semibold text-center hover:bg-gray-300" %>
        </div>
        <div class="px-6 pt-6 pb-8 border-t border-gray-200">
          <ul class="space-y-4">
            <li class="flex items-start">
              <svg class="flex-shrink-0 h-6 w-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="ml-3 text-sm text-gray-700">1 active request at a time</span>
            </li>
            <li class="flex items-start">
              <svg class="flex-shrink-0 h-6 w-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="ml-3 text-sm text-gray-700">Up to 10 responses/month</span>
            </li>
            <li class="flex items-start">
              <svg class="flex-shrink-0 h-6 w-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="ml-3 text-sm text-gray-700">Basic analytics</span>
            </li>
            <li class="flex items-start">
              <svg class="flex-shrink-0 h-6 w-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="ml-3 text-sm text-gray-700">7-day history</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Pro Tier (Most Popular) -->
      <div class="bg-white rounded-lg shadow-2xl overflow-hidden border-4 border-indigo-500 relative">
        <div class="absolute top-0 right-0 bg-indigo-500 text-white px-3 py-1 text-xs font-semibold rounded-bl-lg">
          MOST POPULAR
        </div>
        <div class="px-6 py-8">
          <h3 class="text-2xl font-bold text-gray-900">Professional</h3>
          <p class="mt-4 text-gray-500">For individuals & team leads</p>
          <p class="mt-8">
            <span class="text-4xl font-extrabold text-gray-900">$15</span>
            <span class="text-base font-medium text-gray-500">/month</span>
          </p>
          <p class="mt-2 text-sm text-gray-500">or $150/year (save $30)</p>
          <%= link_to "Start 14-Day Trial", signup_path, class: "mt-8 block w-full bg-indigo-600 text-white rounded-md py-2 text-sm font-semibold text-center hover:bg-indigo-700" %>
        </div>
        <div class="px-6 pt-6 pb-8 border-t border-gray-200">
          <p class="text-xs font-semibold text-gray-900 uppercase tracking-wide mb-4">Everything in Individual, plus:</p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <svg class="flex-shrink-0 h-6 w-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="ml-3 text-sm text-gray-700"><strong>Unlimited</strong> requests & responses</span>
            </li>
            <li class="flex items-start">
              <svg class="flex-shrink-0 h-6 w-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="ml-3 text-sm text-gray-700">Custom questions</span>
            </li>
            <li class="flex items-start">
              <svg class="flex-shrink-0 h-6 w-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="ml-3 text-sm text-gray-700">PDF & CSV exports</span>
            </li>
            <li class="flex items-start">
              <svg class="flex-shrink-0 h-6 w-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="ml-3 text-sm text-gray-700"><strong>Sentiment analysis</strong></span>
            </li>
            <li class="flex items-start">
              <svg class="flex-shrink-0 h-6 w-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="ml-3 text-sm text-gray-700">90-day history</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Team & Enterprise tiers... (same as before) -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="px-6 py-8">
          <h3 class="text-2xl font-bold text-gray-900">Team</h3>
          <p class="mt-4 text-gray-500">For growing teams</p>
          <p class="mt-8">
            <span class="text-4xl font-extrabold text-gray-900">$49</span>
            <span class="text-base font-medium text-gray-500">/month</span>
          </p>
          <%= link_to "Start 14-Day Trial", signup_path, class: "mt-8 block w-full bg-indigo-600 text-white rounded-md py-2 text-sm font-semibold text-center hover:bg-indigo-700" %>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="px-6 py-8">
          <h3 class="text-2xl font-bold text-gray-900">Enterprise</h3>
          <p class="mt-4 text-gray-500">For large organizations</p>
          <p class="mt-8">
            <span class="text-4xl font-extrabold text-gray-900">Custom</span>
          </p>
          <%= link_to "Contact Sales", about_path, class: "mt-8 block w-full bg-gray-900 text-white rounded-md py-2 text-sm font-semibold text-center hover:bg-gray-800" %>
        </div>
      </div>

    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-white border-t border-gray-200">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="text-center text-gray-500">
        <p>&copy; <%= Time.current.year %> Anonymous Feedback. All rights reserved.</p>
      </div>
    </div>
  </footer>
</div>
