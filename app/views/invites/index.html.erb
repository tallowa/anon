<div class="min-h-screen bg-gray-50">

  <%= render 'shared/nav' %>
  
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <div class="sm:flex sm:items-center sm:justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Team Invitations</h2>
        <%= link_to new_invite_path,
            class: "mt-4 sm:mt-0 inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
          </svg>
          Invite Team Member
        <% end %>
      </div>

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 gap-5 sm:grid-cols-3 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0 bg-yellow-100 rounded-md p-3">
                <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="ml-5">
                <dl>
                  <dt class="text-sm font-medium text-gray-500">Pending</dt>
                  <dd class="text-2xl font-semibold text-gray-900"><%= @pending_invites.count %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0 bg-green-100 rounded-md p-3">
                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="ml-5">
                <dl>
                  <dt class="text-sm font-medium text-gray-500">Accepted</dt>
                  <dd class="text-2xl font-semibold text-gray-900"><%= @accepted_invites.count %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0 bg-red-100 rounded-md p-3">
                <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </div>
              <div class="ml-5">
                <dl>
                  <dt class="text-sm font-medium text-gray-500">Expired</dt>
                  <dd class="text-2xl font-semibold text-gray-900"><%= @expired_invites.count %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Pending Invites -->
      <div class="mb-8">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Pending Invitations</h3>
        <% if @pending_invites.any? %>
          <div class="bg-white shadow overflow-hidden sm:rounded-md">
            <ul class="divide-y divide-gray-200">
              <% @pending_invites.each do |invite| %>
                <li class="px-6 py-4">
                  <div class="flex items-center justify-between">
                    <div class="flex-1">
                      <p class="text-sm font-medium text-gray-900"><%= invite.email %></p>
                      <p class="text-sm text-gray-500">
                        Invited by <%= invite.invited_by.display_name %> • 
                        Expires <%= time_ago_in_words(invite.expires_at) %> from now
                      </p>
                    </div>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      Pending
                    </span>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        <% else %>
          <div class="text-center py-12 bg-white rounded-lg shadow">
            <p class="text-gray-500">No pending invitations</p>
          </div>
        <% end %>
      </div>

      <!-- Accepted Invites -->
      <div class="mb-8">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Accepted Invitations</h3>
        <% if @accepted_invites.any? %>
          <div class="bg-white shadow overflow-hidden sm:rounded-md">
            <ul class="divide-y divide-gray-200">
              <% @accepted_invites.each do |invite| %>
                <li class="px-6 py-4">
                  <div class="flex items-center justify-between">
                    <div class="flex-1">
                      <p class="text-sm font-medium text-gray-900">
                        <%= invite.email %>
                        <% if invite.accepted_by %>
                          → <%= invite.accepted_by.display_name %>
                        <% end %>
                      </p>
                      <p class="text-sm text-gray-500">
                        Invited by <%= invite.invited_by.display_name %> • 
                        Accepted <%= time_ago_in_words(invite.accepted_at) %> ago
                      </p>
                    </div>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      ✓ Accepted
                    </span>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        <% else %>
          <div class="text-center py-12 bg-white rounded-lg shadow">
            <p class="text-gray-500">No accepted invitations yet</p>
          </div>
        <% end %>
      </div>

      <!-- Expired Invites (collapsed by default) -->
      <% if @expired_invites.any? %>
        <details class="mb-8">
          <summary class="text-lg font-medium text-gray-900 mb-4 cursor-pointer">
            Expired Invitations (<%= @expired_invites.count %>)
          </summary>
          <div class="bg-white shadow overflow-hidden sm:rounded-md mt-4">
            <ul class="divide-y divide-gray-200">
              <% @expired_invites.each do |invite| %>
                <li class="px-6 py-4">
                  <div class="flex items-center justify-between">
                    <div class="flex-1">
                      <p class="text-sm font-medium text-gray-400"><%= invite.email %></p>
                      <p class="text-sm text-gray-400">
                        Invited by <%= invite.invited_by.display_name %> • 
                        Expired <%= time_ago_in_words(invite.expires_at) %> ago
                      </p>
                    </div>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      Expired
                    </span>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </details>
      <% end %>
    </div>
  </div>
</div>

<%= render 'shared/mobile_menu_script' %>
