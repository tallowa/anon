<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Join <%= @invite.company.name %>
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        You've been invited to join the team!
      </p>
    </div>
    
    <%= form_with model: @user, url: register_path(@invite.token), class: "mt-8 space-y-6" do |f| %>
      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
          <input type="text" value="<%= @invite.email %>" disabled
              class="mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 bg-gray-50 text-gray-500 rounded-md sm:text-sm">
        </div>
        
        <div>
          <%= f.label :job_title, "Job Title (Optional)", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :job_title,
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: "Software Engineer" %>
        </div>
        
        <div>
          <%= f.label :department, "Department (Optional)", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :department,
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: "Engineering" %>
        </div>
        
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password,
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              required: true %>
          <p class="mt-1 text-sm text-gray-500">Minimum 8 characters</p>
        </div>
        
        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation,
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              required: true %>
        </div>
      </div>

      <div>
        <%= f.submit "Create Account", 
            class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
