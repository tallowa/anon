<div class="min-h-screen bg-gray-50">
  <nav class="bg-white shadow">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <%= link_to "← Back to Requests", feedback_requests_path, class: "text-gray-700 hover:text-gray-900" %>
      </div>
      <div class="flex items-center space-x-4">
        <span class="text-sm text-gray-700">
          <span class="font-medium"><%= current_user.display_name %></span>
        </span>
        <%= link_to "My Feedback", my_feedback_path, class: "text-gray-700 hover:text-gray-900" %>
        <%= link_to "Invite Team", invites_path, class: "text-gray-700 hover:text-gray-900" %>
        <%= button_to "Logout", logout_path, method: :delete, class: "text-gray-700 hover:text-gray-900" %>
      </div>
    </div>
  </div>
</nav>

  <div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          Share Your Feedback Link
        </h3>
        <div class="mt-2 max-w-xl text-sm text-gray-500">
          <p>Share this link with colleagues to receive anonymous feedback.</p>
        </div>
        <div class="mt-5">
          <div class="rounded-md bg-gray-50 px-6 py-5">
            <div class="flex items-start justify-between">
              <div class="flex-1 min-w-0">
                <div class="text-sm font-medium text-gray-900 break-all" id="feedback-url">
                  <%= @feedback_request.shareable_url %>
                </div>
                <div class="mt-1 text-sm text-gray-500 flex flex-wrap gap-2">
                  <div>Responses: <span class="font-medium"><%= @feedback_request.response_count %></span></div>
                  <span class="hidden sm:inline">•</span>
                  <div>Expires: <%= @feedback_request.expires_at.strftime("%B %d, %Y") %></div>
                  <% if @feedback_request.archived %>
                    <span>•</span>
                    <div class="text-yellow-600 font-medium">Archived</div>
                  <% end %>
                </div>
              </div>
            </div>
            
            <div class="mt-4 flex flex-wrap gap-3">
              <%= link_to edit_feedback_request_path(@feedback_request),
                  class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 text-sm" do %>
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Edit Questions
              <% end %>
              
              <% unless @feedback_request.archived %>
                <%= button_to archive_feedback_request_path(@feedback_request), method: :patch,
                    data: { confirm: "Archive this request?" },
                    class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 text-sm" do %>
                  <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                  </svg>
                  Archive
                <% end %>
              <% end %>
              
              <button onclick="copyToClipboard()" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 text-sm">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
                Copy Link
              </button>
            </div>
          </div>
        </div>

        <!-- Questions Preview -->
        <div class="mt-8">
          <h4 class="text-base font-medium text-gray-900 mb-4">Your Questions:</h4>
          <div class="space-y-3">
            <% @feedback_request.questions.each_with_index do |question, index| %>
              <div class="flex items-start">
                <span class="flex-shrink-0 inline-flex items-center justify-center h-6 w-6 rounded-full bg-indigo-100 text-indigo-600 text-xs font-medium">
                  <%= index + 1 %>
                </span>
                <p class="ml-3 text-sm text-gray-700"><%= question['text'] %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function copyToClipboard() {
  const url = document.getElementById('feedback-url').textContent.trim();
  navigator.clipboard.writeText(url).then(() => {
    const button = event.target.closest('button');
    const originalText = button.innerHTML;
    button.innerHTML = '<svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>Copied!';
    button.classList.add('bg-green-600');
    button.classList.remove('bg-indigo-600');
    
    setTimeout(() => {
      button.innerHTML = originalText;
      button.classList.remove('bg-green-600');
      button.classList.add('bg-indigo-600');
    }, 2000);
  });
}
</script>
