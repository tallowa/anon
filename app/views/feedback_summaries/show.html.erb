<div class="min-h-screen bg-gray-50">
  <%= render 'shared/nav' %>  
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">My Feedback Analytics</h2>

      <!-- Stats Cards -->
        <!-- Stats Overview -->
<% if @can_view %>
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
    <!-- Total Responses -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">
                Total Responses
              </dt>
              <dd class="text-3xl font-semibold text-gray-900">
                <%= @total_responses %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Average Sentiment -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span class="text-3xl">
              <% if @average_sentiment_score > 0.2 %>
                üòä
              <% elsif @average_sentiment_score < -0.2 %>
                üòû
              <% else %>
                üòê
              <% end %>
            </span>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">
                Average Sentiment
              </dt>
              <dd class="text-3xl font-semibold text-gray-900">
                <%= @average_sentiment_score %>
              </dd>
              <dd class="text-xs text-gray-500 mt-1">
                <% if @average_sentiment_score > 0.2 %>
                  Mostly positive
                <% elsif @average_sentiment_score < -0.2 %>
                  Mostly negative
                <% else %>
                  Balanced
                <% end %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Average Length -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">
                Avg Response Length
              </dt>
              <dd class="text-3xl font-semibold text-gray-900">
                <%= @average_response_length %>
              </dd>
              <dd class="text-xs text-gray-500">characters</dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Most Recent -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">
                Most Recent
              </dt>
              <dd class="text-lg font-semibold text-gray-900">
                <% if @most_recent_feedback %>
                  <%= @most_recent_feedback.fuzzy_time %>
                <% else %>
                  N/A
                <% end %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sentiment Breakdown -->
  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Sentiment Breakdown</h3>
    <div class="grid grid-cols-3 gap-4">
      <div class="text-center p-4 bg-green-50 rounded-lg">
        <div class="text-3xl mb-2">üòä</div>
        <div class="text-2xl font-bold text-green-600"><%= @sentiment_breakdown[:positive] %></div>
        <div class="text-sm text-gray-600">Positive</div>
        <div class="text-xs text-gray-500 mt-1">
          <%= (@sentiment_breakdown[:positive].to_f / @total_responses * 100).round(1) %>%
        </div>
      </div>
      
      <div class="text-center p-4 bg-gray-50 rounded-lg">
        <div class="text-3xl mb-2">üòê</div>
        <div class="text-2xl font-bold text-gray-600"><%= @sentiment_breakdown[:neutral] %></div>
        <div class="text-sm text-gray-600">Neutral</div>
        <div class="text-xs text-gray-500 mt-1">
          <%= (@sentiment_breakdown[:neutral].to_f / @total_responses * 100).round(1) %>%
        </div>
      </div>
      
      <div class="text-center p-4 bg-red-50 rounded-lg">
        <div class="text-3xl mb-2">üòû</div>
        <div class="text-2xl font-bold text-red-600"><%= @sentiment_breakdown[:negative] %></div>
        <div class="text-sm text-gray-600">Negative</div>
        <div class="text-xs text-gray-500 mt-1">
          <%= (@sentiment_breakdown[:negative].to_f / @total_responses * 100).round(1) %>%
        </div>
      </div>
    </div>
  </div>
<% end %>

      <!-- Status Message -->
      <% unless @can_view %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
          <p class="text-sm text-blue-800">
            <strong>Total Responses: <%= @total_responses %></strong>
          </p>
          <p class="text-sm text-blue-700 mt-2">
            You need at least 3 responses before feedback is revealed (to protect anonymity).
          </p>
        </div>
      <% end %>

      <!-- Export Buttons -->
<% if @can_view && @total_responses > 0 %>
  <div class="bg-white shadow rounded-lg p-4 mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-lg font-medium text-gray-900">Export Your Feedback</h3>
        <p class="text-sm text-gray-500 mt-1">Download your feedback for offline analysis</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to export_feedback_pdf_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
          Export PDF
        <% end %>
        
        <%= link_to export_feedback_csv_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Export CSV
        <% end %>
      </div>
    </div>
  </div>
<% end %>


      <% if @can_view %>
        <!-- Response Timeline Chart -->
        <div class="bg-white shadow rounded-lg p-6 mb-8">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Feedback Over Time (Last 30 Days)</h3>
          <%= line_chart @responses_by_day, 
              colors: ["#4F46E5"],
              library: {
                scales: {
                  y: {
                    ticks: {
                      stepSize: 1
                    }
                  }
                }
              } %>
        </div>

        <!-- Individual Feedback Responses -->
          <!-- Individual Feedback Responses -->
<div class="bg-white shadow rounded-lg p-6">
  <h3 class="text-lg font-medium text-gray-900 mb-6">All Feedback</h3>
  <div class="space-y-6">
    <% @all_responses.each_with_index do |response, index| %>
      <div class="border-l-4 border-<%= response.sentiment_label.present? ? response.sentiment_color : 'indigo' %>-500 pl-4 py-2">
        <div class="flex items-start justify-between mb-2">
          <div class="flex items-center space-x-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
            Response #<%= @total_responses - index %>
            </span>
            <% if response.sentiment_label.present? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= response.sentiment_color %>-100 text-<%= response.sentiment_color %>-800">
            <%= response.sentiment_emoji %> <%= response.sentiment_label.capitalize %>
            </span>
          <% end %>
        </div>
        <span class="text-sm text-gray-500">
          <%= response.fuzzy_time %> ‚Ä¢ <%= response.content_length %> characters
        </span>
      </div> 
             
        <!-- Question Responses -->
        <% if response.question_responses.present? && response.question_responses.any? %>
          <div class="mt-3 space-y-3">
            <% response.feedback_request.questions.each do |question| %>
              <% answer = response.question_responses[question['id'].to_s] %>
              <% if answer.present? %>
                <div class="bg-gray-50 rounded-lg p-3">
                  <p class="text-xs font-medium text-gray-500 mb-1"><%= question['text'] %></p>
                  <p class="text-sm text-gray-700"><%= answer %></p>
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>
        
        <!-- Overall Feedback -->
        <div class="mt-3">
          <p class="text-xs font-medium text-gray-500 mb-1">Overall Feedback:</p>
          <div class="prose max-w-none text-gray-700">
            <%= simple_format(response.content) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
          
        <!-- Not Enough Feedback -->
        <div class="bg-white shadow rounded-lg p-8 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">Not Enough Responses Yet</h3>
          <p class="mt-1 text-sm text-gray-500">
            Keep sharing your feedback link! You'll see detailed analytics once you have at least 3 responses.
          </p>
          <%= link_to "View My Requests", feedback_requests_path, 
              class: "mt-4 inline-block text-indigo-600 hover:text-indigo-500 font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/mobile_menu_script' %>
