<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      <% if @using_invite %>
        Join <%= @company.name %>
      <% else %>
        Create your company account
      <% end %>
    </h2>
    <% if @using_invite %>
      <p class="mt-2 text-center text-sm text-gray-600">
        You've been invited to join <%= @company.name %> on Anonymous Feedback
      </p>
    <% else %>
      <p class="mt-2 text-center text-sm text-gray-600">
        Already have an account?
        <%= link_to "Sign in", login_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </p>
    <% end %>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with url: signup_path, method: :post, data: { turbo: false } do |form| %>
        <% if @user.errors.any? %>
          <div class="rounded-md bg-red-50 p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  There were <%= pluralize(@user.errors.count, "error") %>:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Hidden invite token if using invite -->
        <% if params[:invite_token].present? %>
          <%= hidden_field_tag :invite_token, params[:invite_token] %>
        <% end %>

        <!-- Company Fields (only show if NOT using invite) -->
        <% unless @using_invite %>
          <div class="space-y-6 mb-6 pb-6 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Company Information</h3>
            
            <div>
              <%= label_tag "company[name]", "Company Name", class: "block text-sm font-medium text-gray-700" %>
              <%= text_field_tag "company[name]", @company.name, required: true, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>

            <div>
              <%= label_tag "company[email_domain]", "Company Email Domain", class: "block text-sm font-medium text-gray-700" %>
              <%= text_field_tag "company[email_domain]", @company.email_domain, required: true, placeholder: "example.com", class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
              <p class="mt-1 text-sm text-gray-500">All team members must use this email domain</p>
            </div>
          </div>
        <% end %>

        <!-- User Fields -->
        <div class="space-y-6">
          <h3 class="text-lg font-medium text-gray-900">Your Information</h3>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= label_tag "identity_user[first_name]", "First Name", class: "block text-sm font-medium text-gray-700" %>
              <%= text_field_tag "identity_user[first_name]", @user.first_name, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>

            <div>
              <%= label_tag "identity_user[last_name]", "Last Name", class: "block text-sm font-medium text-gray-700" %>
              <%= text_field_tag "identity_user[last_name]", @user.last_name, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>
          </div>

          <div>
            <%= label_tag "identity_user[email]", "Email", class: "block text-sm font-medium text-gray-700" %>
            <%= email_field_tag "identity_user[email]", @user.email, required: true, readonly: @using_invite, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm #{'bg-gray-50' if @using_invite}" %>
            <% if @using_invite %>
              <p class="mt-1 text-sm text-gray-500">Email provided by your invitation</p>
            <% end %>
          </div>

          <div>
            <%= label_tag "identity_user[job_title]", "Job Title", class: "block text-sm font-medium text-gray-700" %>
            <%= text_field_tag "identity_user[job_title]", @user.job_title, placeholder: "e.g., Software Engineer", class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= label_tag "identity_user[password]", "Password", class: "block text-sm font-medium text-gray-700" %>
            <%= password_field_tag "identity_user[password]", nil, required: true, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            <p class="mt-1 text-sm text-gray-500">Must be at least 8 characters</p>
          </div>

          <div>
            <%= label_tag "identity_user[password_confirmation]", "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
            <%= password_field_tag "identity_user[password_confirmation]", nil, required: true, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div class="mt-6">
          <%= submit_tag @using_invite ? "Join Team" : "Create Account", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
